{
  "compilerOptions": {
    "target": "ES2016", // Or newer like ES2020
    "module": "CommonJS", // Standard for Node.js backend
    "outDir": "./dist", // Output directory relative to tsconfig.json
    "rootDir": "./src", // Source directory relative to tsconfig.json
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true // Often useful
    // Add other options as needed
  },
  "include": [
    "src/**/*" // ONLY include files under src
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "dist"          // Exclude the output directory
  ]
}